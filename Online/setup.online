#!/bin/sh

env_file=$(dirname $0)/../shared.env
database=$(realpath $(dirname $0)/../database/)

docker run --env-file=$env_file -v $database:/var/monotempo-data --name receba "receba:1.0"

docker wait receba

docker remove receba

docker run --env-file=$env_file -v $database:/var/monotempo-data -e UPLOAD_TYPE=$1 --name reenvio "reenvio:1.0"

docker wait reenvio

docker remove reenvio

